        <script>
            function showNotice(noticeObj) {
                Notification.requestPermission(function(perm) {
                    if (perm == "granted") {
                        var notification = new Notification(noticeObj.noticeName, {
                            dir: noticeObj.dir,
                            lang: noticeObj.lang,
                            tag: noticeObj.tag,
                            icon: noticeObj.icon,
                            body: noticeObj.body,
                            data: noticeObj.data,
                        });

                        notification.onclick = function() {
                            window.location.href = noticeObj.url;
                        }
                        console.log(notification);
                    }
                })
            }
            var socket = io('http://{{host}}:{{port}}');
            socket.on('myMsg', function(msg) {
                alert(msg);
                showNotice(JSON.parse(msg));
            });
        </script>
